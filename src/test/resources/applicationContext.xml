<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns="http://www.springframework.org/schema/beans"

       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
       http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!-- 开启注解配置 -->
    <context:annotation-config />
    <context:component-scan base-package="com.jumtest" />

    <dubbo:application name="new-test" />
    <dubbo:consumer timeout="100000" check="false" />

    <!-- 集群配置 -->
    <dubbo:registry address="zookeeper://zk1.2dfire-daily.com:2181?backup=zk2.2dfire-daily.com:2181,zk3.2dfire-daily.com:2181" />

    <import resource="fresh-test-druid.xml"/>
    <import resource="fresh-test-dubbo.xml"/>
    <import resource="fresh-test-redis.xml"/>


</beans>